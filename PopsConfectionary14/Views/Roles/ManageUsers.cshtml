
@{
    ViewBag.Title = "ManageUsers";
}


<h2 style="text-align:center">Manage User Roles</h2>

@Html.ActionLink("Create New Role", "Create")

<hr />
<hr />


<h3>Fetch Roles for a User</h3>

@using (Html.BeginForm("GetRoles", "Roles"))

{
    @Html.AntiForgeryToken()

    <table>
        <tr>
            <td><b>Username :</b></td>
            <td>@Html.DropDownList("UserName", (IEnumerable<SelectListItem>)ViewBag.MyUser, "Select ...", htmlAttributes: new { @class = "form-control" })</td>
            <td>

                <div class="form-group">
                    <div class="col-md-offset-1 col-md-6">
                        <input type="submit" value="Get Roles for this User" class="btn btn-danger" style="font-style:oblique" />
                    </div>
                </div>
            </td>
        </tr>

        <tr>
            @if (ViewBag.RolesForThisUser != null)

            {

                <div style="background-color:transparent">
                    <h4 style="text-align:center; color:red">@ViewBag.d</h4>

                    <ol style="text-align:center">

                        @foreach (string s in ViewBag.RolesForThisUser)

                        {

                            <ul><h3>@s</h3></ul>

                        }

                    </ol>

                </div>

            }
        </tr>
        @ViewBag.del
    </table>
}

<hr />

<h3>Remove A User from a Role</h3>



@using (Html.BeginForm("DeleteRoleForUser", "Roles"))

{

    @Html.AntiForgeryToken()

    @Html.ValidationSummary(true)
    <table>
        <tr>
            <td><b>Username :</b></td>
            <td>@Html.DropDownList("UserName", (IEnumerable<SelectListItem>)ViewBag.MyUser, "Select ...", htmlAttributes: new { @class = "form-control" })</td>


            <td>
                <div class="form-group">
                    <div class="col-md-offset-1 col-md-6">
                        <input type="submit" value="Delete this user from Role" class="btn btn-danger" style="font-style:oblique" />
                    </div>
                </div>
            </td>
        </tr>
        <tr>
            <td><b>Role Name:</b></td>

            <td>  @Html.DropDownList("RoleName", (IEnumerable<SelectListItem>)ViewBag.Roles, "Select ...", htmlAttributes: new { @class = "form-control" })</td>
        </tr>
    </table>

}
<h4 style="text-align:center; color:green">@ViewBag.ResultMessage</h4>
<h4 style="text-align:center; color:red">@ViewBag.Result</h4>







