@model PopsConfectionary14.Models.Order
@{
    ViewBag.Title = "Address And Payment"; }
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
@using (Html.BeginForm())
{
    <h2>Address And Payment</h2>

    @Html.LabelFor(x => x.Address, htmlAttributes: new { @class = "control-label" })
    @Html.EditorFor(x => x.Address, new { htmlAttributes = new { @class = "form-control", placeholder = "Address" } })
    
    <br/>
    @Html.LabelFor(x => x.Status, htmlAttributes: new { @class = "control-label" })
  <p> @Html.RadioButtonFor(x => x.Status, "Delivery") Delivery</p>
   <p> @Html.RadioButtonFor(x => x.Status, "Collection") Collection</p>
    <br/>

    <div class="form-group">
        <div >
            <input type="submit" value="Submit Order" class="btn btn-default" />
        </div>
    </div>

}


